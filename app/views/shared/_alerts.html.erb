<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: 'Parker Matheson Portfolio', sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: 'Parker Matheson Portfolio', sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: 'Parker Matheson Portfolio', sticky: false) %>
<% end %>